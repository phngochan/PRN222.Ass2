<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVDealerSys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ev-green-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm ev-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ev-brand" href="/">
                    <i class="fas fa-charging-station me-2"></i>EVDealerSys
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">

                    <!-- Menu giữa -->
                    <ul class="navbar-nav mx-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link ev-nav-link" asp-page="/Dashboard/Index">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            </li>

                            @if (User.IsInRole("1") || User.IsInRole("2"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link ev-nav-link" asp-page="/UsersManagement/Index">
                                        <i class="fas fa-users"></i> Quản lý User
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle ev-nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog"></i> Quản lý
                                </a>
                                <ul class="dropdown-menu ev-dropdown-menu">
                                    <li><a class="dropdown-item ev-dropdown-item" asp-page="/VehiclesManagement/Index"><i class="fas fa-car"></i> Xe</a></li>
                                    <li>
                                        <a class="dropdown-item ev-dropdown-item" asp-page="/TestDrives/Index">
                                            <i class="fas fa-calendar-alt"></i> Lịch Thử Xe
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item ev-dropdown-item" asp-page="/CustomerManagement/Index"><i class="fas fa-users"></i> Khách hàng</a></li>
                                    <li>
                                        <a class="dropdown-item ev-dropdown-item" asp-page="/Orders/Index">
                                            <i class="fas fa-shopping-cart"></i> Đơn Hàng
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item ev-dropdown-item" asp-page="/DealersManagement/Index"><i class="fas fa-building"></i> Đại lý</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle ev-nav-link" href="#" id="reportDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-chart-bar"></i> Báo Cáo
                                </a>
                                <ul class="dropdown-menu ev-dropdown-menu">
                                    <li>
                                        <a class="dropdown-item ev-dropdown-item" href="/Report/SalesSummary">
                                            <i class="fas fa-dollar-sign"></i> Báo Cáo Doanh Thu
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item ev-dropdown-item" href="/Report/MarketShareAll">
                                            <i class="fas fa-chart-pie"></i> Thị Phần Theo Đại Lý
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item ev-dropdown-item" href="/Report/InventoryAll">
                                            <i class="fas fa-warehouse"></i> Tồn Kho Theo Đại Lý
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            @if (User.IsInRole("1") || User.IsInRole("2"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link ev-nav-link" asp-page="/ActivityLogs/Index">
                                        <i class="fas fa-history"></i> Activity Logs    
                                    </a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link ev-nav-link" href="/Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Login/User -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle ev-nav-link" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end ev-dropdown-menu">
                                    <li><h6 class="dropdown-header">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item ev-dropdown-item" href="#"><i class="fas fa-user-edit"></i> Hồ sơ</a></li>
                                    <li><a class="dropdown-item ev-dropdown-item" href="#"><i class="fas fa-key"></i> Đổi mật khẩu</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item ev-dropdown-item text-danger" asp-page="/Account/Logout">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link ev-nav-link" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("_Breadcrumb")
            @await Html.PartialAsync("_Alerts")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EVDealerSys - <a href="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.14/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
