@page
@model PRN222.Ass2.EVDealerSys.Pages.TestDrives.DashboardModel
@{
    ViewData["Title"] = "Test Drive Dashboard";
    var dashboard = Model.Dashboard;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-car"></i> Dashboard Thử Xe
        </h1>
        <div>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Đặt lịch thử xe
            </a>
            <a asp-page="./Index" class="btn btn-outline-primary">
                <i class="fas fa-list"></i> Danh sách
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Hôm nay
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@dashboard.TodayTestDrivesCount</div>
                            <div class="small text-muted">
                                <i class="fas fa-calendar-day"></i> Lịch thử xe
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Chờ xác nhận
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@dashboard.PendingTestDrives</div>
                            <div class="small text-warning">
                                <i class="fas fa-clock"></i> Cần xử lý
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Hoàn thành
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@dashboard.CompletedTestDrives</div>
                            <div class="small text-success">
                                <i class="fas fa-check"></i> đã thực hiện
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tổng cộng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@dashboard.TotalTestDrives</div>
                            <div class="small text-info">
                                <i class="fas fa-car"></i> Lịch thử xe
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-car fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-calendar-day"></i> Lịch thử xe hôm nay
                    </h6>
                </div>
                <div class="card-body">
                    @if (dashboard.TodayTestDrives.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Thời gian</th>
                                        <th>Khách hàng</th>
                                        <th>Xe</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in dashboard.TodayTestDrives.OrderBy(t => t.StartTime))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</strong>
                                            </td>
                                            <td>
                                                <div>@item.CustomerName</div>
                                                <small class="text-muted">@item.CustomerPhone</small>
                                            </td>
                                            <td>
                                                <div>@item.VehicleName</div>
                                                <small class="text-muted">@item.VehicleModel</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-@Model.GetStatusBadgeClass(item.Status)">
                                                    @item.StatusName
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (item.Status == 1)
                                                {
                                                    <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="status" value="2" />
                                                        <button type="submit" class="btn btn-sm btn-success" title="Xác nhận">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-day fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có lịch thử xe nào hôm nay</h5>
                            <a asp-page="./Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Đặt lịch thử xe
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-calendar-alt"></i> Lịch sắp tới
                    </h6>
                </div>
                <div class="card-body">
                    @if (dashboard.UpcomingTestDrives.Any())
                    {
                        @foreach (var item in dashboard.UpcomingTestDrives)
                        {
                            <div class="card mb-3 border-left-primary">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">@item.CustomerName</h6>
                                            <small class="text-muted">@item.VehicleName</small>
                                            <div class="small">
                                                <i class="fas fa-calendar"></i> @item.ScheduledDate.ToString("dd/MM/yyyy")
                                                <br>
                                                <i class="fas fa-clock"></i> @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                                            </div>
                                        </div>
                                        <span class="badge bg-@Model.GetStatusBadgeClass(item.Status)">
                                            @item.StatusName
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="text-center">
                            <a asp-page="./Index" class="btn btn-sm btn-outline-primary">
                                Xem tất cả <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-alt fa-2x text-muted mb-2"></i>
                            <p class="text-muted small">Không có lịch nào sắp tới</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-rocket"></i> Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="./Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Đặt lịch thử xe
                        </a>
                        <a asp-page="./Index" asp-route-filterStatus="1" class="btn btn-warning">
                            <i class="fas fa-clock"></i> Lịch chờ xác nhận
                        </a>
                        <a asp-page="./Index" asp-route-filterDate="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-info">
                            <i class="fas fa-calendar-day"></i> Lịch hôm nay
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card.border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
</style>
