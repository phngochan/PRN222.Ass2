@page
@model PRN222.Ass2.EVDealerSys.Pages.TestDrives.IndexModel
@{
    ViewData["Title"] = "Quản lý lịch thử xe";
    var vm = Model.ViewModel;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-car"></i> Quản lý lịch thử xe
        </h1>
        <div>
            <a asp-page="./Dashboard" class="btn btn-info">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Đặt lịch mới
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label" asp-for="SearchTerm">Tìm kiếm</label>
                        <input class="form-control" asp-for="SearchTerm"
                               placeholder="Tên, số điện thoại, email khách hàng..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" asp-for="FilterStatus">Trạng thái</label>
                        <select class="form-select" asp-for="FilterStatus">
                            <option value="">-- Tất cả --</option>
                            <option value="1" selected="@(Model.FilterStatus == 1)">Chờ xác nhận</option>
                            <option value="2" selected="@(Model.FilterStatus == 2)">Đã xác nhận</option>
                            <option value="3" selected="@(Model.FilterStatus == 3)">Hoàn thành</option>
                            <option value="4" selected="@(Model.FilterStatus == 4)">Đã hủy</option>
                            <option value="5" selected="@(Model.FilterStatus == 5)">Khách hàng hủy</option>
                            <option value="6" selected="@(Model.FilterStatus == 6)">Khách hàng không đến</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" asp-for="FilterDate">Ngày thử xe</label>
                        <input class="form-control" type="date" asp-for="FilterDate" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" asp-for="FilterVehicle">Xe</label>
                        <select class="form-select" asp-for="FilterVehicle" asp-items="Model.VehicleOptions">
                            <option value="">-- Tất cả xe --</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (vm.TestDrives.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Khách hàng</th>
                                <th>Liên hệ</th>
                                <th>Xe</th>
                                <th>Ngày &amp; Giờ</th>
                                <th>Trạng thái</th>
                                <th>Ghi chú</th>
                                <th width="200">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in vm.TestDrives)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <strong>@item.CustomerName</strong>
                                    </td>
                                    <td>
                                        <div>
                                            <small>
                                                <i class="fas fa-phone"></i> @item.CustomerPhone
                                            </small>
                                        </div>
                                        <div>
                                            <small>
                                                <i class="fas fa-envelope"></i> @item.CustomerEmail
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div><strong>@item.VehicleName</strong></div>
                                        <small class="text-muted">@item.VehicleModel</small>
                                    </td>
                                    <td>
                                        <div>
                                            <i class="fas fa-calendar"></i> @item.ScheduledDate.ToString("dd/MM/yyyy")
                                        </div>
                                        <div>
                                            <i class="fas fa-clock"></i> @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@Model.GetStatusBadgeClass(item.Status)">
                                            @item.StatusName
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Notes))
                                        {
                                            <span title="@item.Notes">
                                                @(item.Notes.Length > 30 ? item.Notes[..30] + "..." : item.Notes)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">--</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="./Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            @if (item.Status == 1 || item.Status == 2)
                                            {
                                                <a asp-page="./Edit" asp-route-id="@item.Id"
                                                   class="btn btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }

                                            @if (item.Status == 1)
                                            {
                                                <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="2" />
                                                    <button type="submit" class="btn btn-outline-success"
                                                            title="Xác nhận" onclick="return confirm('Xác nhận lịch thử xe này?')">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }

                                            @if (item.Status == 2)
                                            {
                                                <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="3" />
                                                    <button type="submit" class="btn btn-outline-primary"
                                                            title="Hoàn thành" onclick="return confirm('Đánh dấu hoàn thành?')">
                                                        <i class="fas fa-flag-checkered"></i>
                                                    </button>
                                                </form>
                                            }

                                            @if (item.Status == 2)
                                            {
                                                @* Chỉ cho phép đánh dấu "Không đến" sau khi qua giờ thử xe *@
                                                var testDriveDateTime = item.ScheduledDate.Date.Add(item.EndTime);
                                                var canMarkNoShow = DateTime.Now > testDriveDateTime;
                                                
                                                if (canMarkNoShow)
                                                {
                                                    <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="status" value="6" />
                                                        <button type="submit" class="btn btn-outline-dark"
                                                                title="Khách hàng không đến" onclick="return confirm('Xác nhận khách hàng không đến?')">
                                                            <i class="fas fa-user-clock"></i>
                                                        </button>
                                                    </form>
                                                }
                                            }

                                            @if (item.Status == 1 || item.Status == 2)
                                            {
                                                <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="4" />
                                                    <button type="submit" class="btn btn-outline-danger"
                                                            title="Hủy lịch" onclick="return confirm('Hủy lịch thử xe này?')">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            }

                                            @if (item.Status == 1 || item.Status == 2)
                                            {
                                                <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="5" />
                                                    <button type="submit" class="btn btn-outline-secondary"
                                                            title="Khách hàng hủy?" onclick="return confirm('Xác nhận khách hàng hủy lịch?')">
                                                        <i class="fas fa-user-slash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Test drive pagination" class="mt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            Hiển thị <strong>@vm.TestDrives.Count</strong> lịch thử xe
                        </div>
                    </div>
                </nav>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-car fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Không tìm thấy lịch thử xe nào</h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(vm.SearchTerm) || vm.FilterStatus.HasValue || vm.FilterDate.HasValue)
                        {
                            <span>Thử thay đổi bộ lọc tìm kiếm hoặc </span>
                        }
                        <a asp-page="./Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Đặt lịch thử xe đầu tiên
                        </a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script>
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 5000);

        // ========== SignalR Real-time Updates ==========
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/testDriveHub")
            .withAutomaticReconnect()
            .build();

        // Listen for new test drive created
        connection.on("TestDriveCreated", function (data) {
            console.log("New test drive created:", data);
            
            // Show toast notification
            showNotification('success', `Lịch thử xe mới: ${data.customerName} - ${data.vehicleName}`);
            
            // Auto-reload page to show new booking
            setTimeout(() => location.reload(), 2000);
        });

        // Listen for test drive updated
        connection.on("TestDriveUpdated", function (data) {
            console.log("Test drive updated:", data);
            
            // Show toast notification
            showNotification('info', `Lịch thử xe đã được cập nhật: ${data.customerName}`);
            
            // Auto-reload page to show changes
            setTimeout(() => location.reload(), 2000);
        });

        // Listen for status changes
        connection.on("TestDriveStatusChanged", function (data) {
            console.log("Status changed:", data);
            
            // Show toast notification
            showNotification('warning', `Trạng thái thay đổi: ${data.customerName} - ${data.statusName}`);
            
            // Auto-reload page to reflect status change
            setTimeout(() => location.reload(), 2000);
        });

        // Start connection
        connection.start()
            .then(() => {
                console.log("✅ Connected to TestDriveHub");
            })
            .catch(err => {
                console.error("❌ SignalR connection error:", err);
            });

        // Show notification helper
        function showNotification(type, message) {
            const alertClass = type === 'success' ? 'alert-success' : 
                             type === 'info' ? 'alert-info' : 
                             type === 'warning' ? 'alert-warning' : 'alert-danger';
            
            const icon = type === 'success' ? 'fa-check-circle' : 
                        type === 'info' ? 'fa-info-circle' : 
                        type === 'warning' ? 'fa-exclamation-triangle' : 'fa-times-circle';
            
            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 80px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    <i class="fas ${icon} me-2"></i>
                    <strong>${message}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            $('body').append(alertHtml);
            
            setTimeout(() => {
                $('.alert').fadeOut('slow', function() { $(this).remove(); });
            }, 5000);
        }
    </script>
}
