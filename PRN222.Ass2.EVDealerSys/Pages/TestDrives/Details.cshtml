@page "{id:int}"
@model PRN222.Ass2.EVDealerSys.Pages.TestDrives.DetailsModel
@{
    ViewData["Title"] = "Chi tiết lịch thử xe";
    var item = Model.TestDrive;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-eye"></i> Chi tiết lịch thử xe
        </h1>
        <div>
            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user"></i> Thông tin khách hàng
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Tên khách hàng</dt>
                        <dd class="col-sm-8">@item.CustomerName</dd>

                        <dt class="col-sm-4">Số điện thoại</dt>
                        <dd class="col-sm-8">@item.CustomerPhone</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@item.CustomerEmail</dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-car"></i> Thông tin lịch thử xe
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Xe thử</dt>
                        <dd class="col-sm-8">@item.VehicleName @if(!string.IsNullOrWhiteSpace(item.VehicleModel)){<span class="text-muted">(@item.VehicleModel)</span>}</dd>

                        <dt class="col-sm-4">Ngày thử xe</dt>
                        <dd class="col-sm-8">@item.ScheduledDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Thời gian</dt>
                        <dd class="col-sm-8">
                            @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                        </dd>

                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@Model.GetStatusBadgeClass(item.Status)">
                                @item.StatusName
                            </span>
                        </dd>

                        <dt class="col-sm-4">Ghi chú</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrWhiteSpace(item.Notes))
                            {
                                @item.Notes
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Thông tin khác
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Tư vấn viên</dt>
                        <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(item.UserName) ? item.UserName : "—")</dd>

                        <dt class="col-sm-5">Đại lý</dt>
                        <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(item.DealerName) ? item.DealerName : "—")</dd>

                        <dt class="col-sm-5">Ngày tạo</dt>
                        <dd class="col-sm-7">
                            @(item.CreatedAt.HasValue ? item.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "—")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
