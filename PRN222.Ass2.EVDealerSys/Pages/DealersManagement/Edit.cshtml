@page "{id:int}"
@model PRN222.Ass2.EVDealerSys.Pages.DealersManagement.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa đại lý";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header py-3 bg-primary">
                    <h5 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-building"></i> Chỉnh sửa Đại lý - ID: @Model.ViewModel.Id
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.CustomerCount > 0 || Model.ViewModel.InventoryCount > 0 || Model.ViewModel.OrderCount > 0 || Model.ViewModel.UserCount > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Lưu ý:</strong> Đại lý này có dữ liệu liên quan:
                            <ul class="mb-0 mt-2">
                                @if (Model.ViewModel.CustomerCount > 0)
                                {
                                    <li>@Model.ViewModel.CustomerCount khách hàng</li>
                                }
                                @if (Model.ViewModel.InventoryCount > 0)
                                {
                                    <li>@Model.ViewModel.InventoryCount kho hàng</li>
                                }
                                @if (Model.ViewModel.OrderCount > 0)
                                {
                                    <li>@Model.ViewModel.OrderCount đơn hàng</li>
                                }
                                @if (Model.ViewModel.UserCount > 0)
                                {
                                    <li>@Model.ViewModel.UserCount người dùng</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-page="Edit" method="post">
                        <input type="hidden" asp-for="ViewModel.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ViewModel.Name" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <input asp-for="ViewModel.Name" class="form-control" placeholder="Nhập tên đại lý..." />
                            </div>
                            <span asp-validation-for="ViewModel.Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ViewModel.Address" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <input asp-for="ViewModel.Address" class="form-control" placeholder="Nhập địa chỉ..." />
                            </div>
                            <span asp-validation-for="ViewModel.Address" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ViewModel.Region" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map"></i></span>
                                <input asp-for="ViewModel.Region" class="form-control" placeholder="Nhập khu vực..." />
                            </div>
                            <span asp-validation-for="ViewModel.Region" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <a asp-page="./Details" asp-route-id="@Model.ViewModel.Id" class="btn btn-info me-2">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .bg-primary {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%) !important;
    }

    .text-primary {
        color: #3e5f44 !important;
    }

    .btn-primary {
        background-color: #3e5f44;
        border-color: #3e5f44;
    }

        .btn-primary:hover {
            background-color: #2c3e2f;
            border-color: #2c3e2f;
        }

    .btn-info {
        background-color: #93da97;
        border-color: #93da97;
        color: #2c3e2f;
    }

        .btn-info:hover {
            background-color: #7ec883;
            border-color: #7ec883;
        }

    .btn-success {
        background-color: #6b9b76;
        border-color: #6b9b76;
    }

        .btn-success:hover {
            background-color: #5e936c;
            border-color: #5e936c;
        }

    .input-group-text {
        background-color: #e8ffd7;
        border-color: #93da97;
        color: #3e5f44;
    }

    .form-control:focus {
        border-color: #5e936c;
        box-shadow: 0 0 0 0.2rem rgba(62, 95, 68, 0.25);
    }

    .alert-warning {
        background-color: #fff8e1;
        border-color: #5e936c;
        color: #2c3e2f;
    }
</style>
