@page
@model PRN222.Ass2.EVDealerSys.Pages.DealersManagement.DetailsModel
@{
    ViewData["Title"] = "Chi tiết đại lý";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">
                <i class="fas fa-building"></i> Chi tiết đại lý
            </h2>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ViewModel.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ViewModel.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xóa
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Thông tin cơ bản
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">ID:</div>
                        <div class="col-md-9">@Model.ViewModel.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Tên đại lý:</div>
                        <div class="col-md-9">
                            <h5 class="text-primary mb-0">@Model.ViewModel.Name</h5>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Địa chỉ:</div>
                        <div class="col-md-9">
                            <i class="fas fa-map-marker-alt text-muted"></i> @Model.ViewModel.Address
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 font-weight-bold">Khu vực:</div>
                        <div class="col-md-9">
                            <span class="badge badge-info">@Model.ViewModel.Region</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 font-weight-bold">Doanh thu:</div>
                        <div class="col-md-9">
                            <h4 class="text-success mb-0">@Model.ViewModel.TotalRevenue.ToString("N0") VNĐ</h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users"></i> Khách hàng hàng đầu
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.TopCustomers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Tên khách hàng</th>
                                        <th>Email</th>
                                        <th>Số đơn hàng</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var customer in Model.ViewModel.TopCustomers)
                                    {
                                        <tr>
                                            <td>@customer.CustomerName</td>
                                            <td>@customer.Email</td>
                                            <td>
                                                <span class="badge badge-primary">@customer.OrderCount</span>
                                            </td>
                                            <td>
                                                <a asp-controller="CustomersManagement" asp-action="Details" asp-route-id="@customer.CustomerId"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">Chưa có khách hàng</p>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-warehouse"></i> Kho hàng gần đây
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.RecentInventories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Mẫu xe</th>
                                        <th>Số lượng</th>
                                        <th>Cập nhật lần cuối</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var inventory in Model.ViewModel.RecentInventories)
                                    {
                                        <tr>
                                            <td>@inventory.VehicleModel</td>
                                            <td>
                                                <span class="badge badge-success">@inventory.Quantity</span>
                                            </td>
                                            <td>@inventory.LastUpdated.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">Chưa có kho hàng</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> Thống kê
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-users fa-2x text-primary"></i>
                            </div>
                            <div class="text-right">
                                <div class="text-muted small">Khách hàng</div>
                                <div class="h4 mb-0 font-weight-bold">@Model.ViewModel.TotalCustomers</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-warehouse fa-2x text-success"></i>
                            </div>
                            <div class="text-right">
                                <div class="text-muted small">Kho hàng</div>
                                <div class="h4 mb-0 font-weight-bold">@Model.ViewModel.TotalInventories</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-shopping-cart fa-2x text-info"></i>
                            </div>
                            <div class="text-right">
                                <div class="text-muted small">Đơn hàng</div>
                                <div class="h4 mb-0 font-weight-bold">@Model.ViewModel.TotalOrders</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user-tie fa-2x text-warning"></i>
                            </div>
                            <div class="text-right">
                                <div class="text-muted small">Người dùng</div>
                                <div class="h4 mb-0 font-weight-bold">@Model.ViewModel.TotalUsers</div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-truck fa-2x text-secondary"></i>
                            </div>
                            <div class="text-right">
                                <div class="text-muted small">Phân bổ xe</div>
                                <div class="h4 mb-0 font-weight-bold">@Model.ViewModel.TotalAllocations</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cog"></i> Thao tác
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="CustomersManagement" asp-action="Index" asp-route-dealerId="@Model.ViewModel.Id"
                           class="btn btn-primary btn-block">
                            <i class="fas fa-users"></i> Xem khách hàng
                        </a>
                        <a href="#" class="btn btn-success btn-block">
                            <i class="fas fa-warehouse"></i> Xem kho hàng
                        </a>
                        <a href="#" class="btn btn-info btn-block">
                            <i class="fas fa-shopping-cart"></i> Xem đơn hàng
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-block">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%) !important;
    }

    .text-primary {
        color: #3e5f44 !important;
    }

    .text-success {
        color: #6b9b76 !important;
    }

    .text-info {
        color: #5e936c !important;
    }

    .btn-primary {
        background-color: #3e5f44;
        border-color: #3e5f44;
    }

        .btn-primary:hover {
            background-color: #2c3e2f;
            border-color: #2c3e2f;
        }

    .btn-warning {
        background-color: #5e936c;
        border-color: #5e936c;
        color: white;
    }

    .btn-info {
        background-color: #93da97;
        border-color: #93da97;
        color: #2c3e2f;
    }

    .btn-success {
        background-color: #6b9b76;
        border-color: #6b9b76;
    }

    .badge-primary {
        background-color: #3e5f44;
    }

    .badge-success {
        background-color: #6b9b76;
    }

    .badge-info {
        background-color: #93da97;
        color: #2c3e2f;
    }

    .thead-light {
        background-color: #e8ffd7;
        color: #2c3e2f;
    }

    .breadcrumb-item a {
        color: #3e5f44;
        text-decoration: none;
    }

        .breadcrumb-item a:hover {
            color: #5e936c;
        }
</style>

