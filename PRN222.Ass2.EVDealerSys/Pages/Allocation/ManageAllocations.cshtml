@page
@model PRN222.Ass2.EVDealerSys.Pages.Allocation.ManageAllocationsModel
@{
    ViewData["Title"] = "Quản Lý Phân Bổ Xe";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-boxes"></i> Quản Lý Phân Bổ Xe</h2>
    @if (User.IsInRole("2"))
    {
        <span class="badge bg-success">Manager View - Yêu Cầu Đã Gửi EVM</span>
    }
    else if (User.IsInRole("4"))
    {
        <span class="badge bg-info">EVM Staff View</span>
    }
    else if (User.IsInRole("1"))
    {
        <span class="badge bg-danger">Admin View</span>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center bg-warning text-white">
            <div class="card-body">
                <h3>@Model.AllRequests.Count(r => r.Status == 0)</h3>
                <p class="mb-0">Chờ duyệt</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center bg-success text-white">
            <div class="card-body">
                <h3>@Model.AllRequests.Count(r => r.Status == 1)</h3>
                <p class="mb-0">Đã duyệt</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center bg-info text-white">
            <div class="card-body">
                <h3>@Model.AllRequests.Count(r => r.Status == 4)</h3>
                <p class="mb-0">Đang vận chuyển</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center bg-primary text-white">
            <div class="card-body">
                <h3>@Model.AllRequests.Count(r => r.Status == 5)</h3>
                <p class="mb-0">Đã giao</p>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="statusFilter" class="form-select" asp-for="StatusFilter">
                    <option value="">Tất cả</option>
                    <option value="0">Chờ Manager xét duyệt</option>
                    <option value="1">Chờ EVM phê duyệt</option>
                    <option value="2">Đã phê duyệt</option>
                    <option value="3">Từ chối</option>
                    <option value="4">Đang vận chuyển</option>
                    <option value="5">Đã giao</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Dealer</label>
                <select name="dealerFilter" class="form-select" asp-for="DealerFilter">
                    <option value="">Tất cả</option>
                    @foreach (var dealer in Model.AllRequests.GroupBy(r => r.DealerName).Select(g => g.Key).Distinct())
                    {
                        <option value="@dealer">@dealer</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo mẫu xe..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-success w-100"><i class="fas fa-search"></i> Lọc</button>
            </div>
        </form>
    </div>
</div>

<!-- Allocations Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Dealer</th>
                        <th>Xe</th>
                        <th>SL</th>
                        <th>Ngày YC</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.Requests)
                    {
                        <tr>
                            <td><strong>#@request.Id</strong></td>
                            <td>@request.DealerName</td>
                            <td>@request.VehicleModel @request.VehicleVersion</td>
                            <td><span class="badge bg-secondary">@request.Quantity</span></td>
                            <td>@request.RequestDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @switch(request.Status)
                                {
                                    case 0: <span class="badge bg-warning">Chờ Manager xét duyệt</span>; break;
                                    case 1: <span class="badge bg-info">Chờ EVM phê duyệt</span>; break;
                                    case 2: <span class="badge bg-success">Đã phê duyệt</span>; break;
                                    case 3: <span class="badge bg-danger">Từ chối</span>; break;
                                    case 4: <span class="badge bg-primary">Đang vận chuyển</span>; break;
                                    case 5: <span class="badge bg-success">Đã giao</span>; break;
                                    case 6: <span class="badge bg-secondary">Đã hủy</span>; break;
                                    default: <span class="badge bg-secondary">Không xác định</span>; break;
                                }
                            </td>
                            <td>
                                @* Role 4 (EVM Staff): Xuất kho khi status = 2 (Approved) *@
                                @if (User.IsInRole("4") && request.Status == 2)
                                {
                                    <form method="post" asp-page-handler="Fulfill" class="d-inline">
                                        <input type="hidden" name="allocationId" value="@request.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary" title="Xuất kho">
                                            <i class="fas fa-shipping-fast"></i> Xuất kho
                                        </button>
                                    </form>
                                }
                                
                                @* Role 4 (EVM Staff): Xác nhận giao hàng khi status = 4 (InTransit) *@
                                @if (User.IsInRole("4") && request.Status == 4)
                                {
                                    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#deliverModal-@request.Id" title="Xác nhận giao hàng">
                                        <i class="fas fa-box-open"></i> Giao hàng
                                    </button>
                                }
                                
                                @* NEW: Role 2 (Manager): Xác nhận đã nhận hàng khi status = 5 (Delivered) *@
                                @if (User.IsInRole("2") && request.Status == 5)
                                {
                                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#confirmReceivedModal-@request.Id" title="Xác nhận đã nhận hàng">
                                        <i class="fas fa-check-double"></i> Xác nhận nhận
                                    </button>
                                }
                                
                                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#detailModal-@request.Id">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Detail & Action Modals -->
@foreach (var request in Model.Requests)
{
    <!-- Detail Modal -->
    <div class="modal fade" id="detailModal-@request.Id" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-ev-pale">
                    <h5 class="modal-title">Chi Tiết Phân Bổ #@request.Id</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Thông Tin Yêu Cầu</h6>
                            <p><strong>Dealer:</strong> @request.DealerName</p>
                            <p><strong>Xe:</strong> @request.VehicleModel @request.VehicleVersion</p>
                            <p><strong>Số lượng:</strong> @request.Quantity</p>
                            <p><strong>Màu:</strong> @request.RequestedColor</p>
                            <p><strong>Lý do:</strong> @request.ReasonText</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Trạng Thái</h6>
                            <p><strong>Ngày yêu cầu:</strong> @request.RequestDate.ToString("dd/MM/yyyy")</p>
                            @if (request.AllocationDate.HasValue)
                            {
                                <p><strong>Ngày phê duyệt:</strong> @request.AllocationDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                            @if (request.ShipmentDate.HasValue)
                            {
                                <p><strong>Ngày xuất kho:</strong> @request.ShipmentDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                            @if (request.DeliveryDate.HasValue)
                            {
                                <p><strong>Ngày giao hàng:</strong> @request.DeliveryDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(request.ApprovalNotes))
                    {
                        <hr />
                        <div class="alert alert-info">
                            <strong>Ghi chú phê duyệt:</strong> @request.ApprovalNotes
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Deliver Modal (Role 4 - EVM Staff) -->
    @if (User.IsInRole("4") && request.Status == 4)
    {
        <div class="modal fade" id="deliverModal-@request.Id" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-page-handler="Deliver">
                        <input type="hidden" name="allocationId" value="@request.Id" />
                        <div class="modal-header bg-success text-white">
                            <h5 class="modal-title"><i class="fas fa-check-circle"></i> Xác Nhận Giao Hàng</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Xác nhận xe đã được giao đến <strong>@request.DealerName</strong>?</p>
                            <div class="mb-3">
                                <label class="form-label">Ngày giao hàng</label>
                                <input type="date" name="deliveryDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-success">Xác Nhận Giao Hàng</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    <!-- NEW: Confirm Received Modal (Role 2 - Manager) -->
    @if (User.IsInRole("2") && request.Status == 5)
    {
        <div class="modal fade" id="confirmReceivedModal-@request.Id" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-page-handler="ConfirmReceived">
                        <input type="hidden" name="allocationId" value="@request.Id" />
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title"><i class="fas fa-check-double"></i> Xác Nhận Đã Nhận Hàng</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Xác nhận rằng dealer đã nhận đủ <strong>@request.Quantity xe @request.VehicleModel @request.VehicleVersion</strong>
                            </div>
                            <p><strong>Thông tin lô hàng:</strong></p>
                            <ul>
                                <li>Số lượng: @request.Quantity xe</li>
                                <li>Màu: @(request.RequestedColor ?? "Không yêu cầu")</li>
                                <li>Ngày giao: @(request.DeliveryDate?.ToString("dd/MM/yyyy") ?? "N/A")</li>
                            </ul>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i> Sau khi xác nhận, số lượng xe sẽ được cập nhật vào kho dealer.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check-double"></i> Xác Nhận Đã Nhận
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script>
        $(function () {
            // Ẩn alert sau 5s
            setTimeout(function () { 
                $('.alert').fadeOut('slow'); 
            }, 5000);
        });
    </script>
}
