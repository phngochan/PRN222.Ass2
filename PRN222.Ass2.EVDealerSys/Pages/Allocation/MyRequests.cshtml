@page
@model PRN222.Ass2.EVDealerSys.Pages.Allocation.MyRequestsModel
@{
    ViewData["Title"] = "Yêu Cầu Phân Bổ Của Tôi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-clipboard-list"></i> Yêu Cầu Phân Bổ Của Tôi</h2>
    <a asp-page="./Request" class="btn btn-primary">
        <i class="fas fa-plus"></i> Tạo Yêu Cầu Mới
    </a>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Trạng thái</label>
                <select name="statusFilter" class="form-select" asp-for="StatusFilter">
                    <option value="">Tất cả</option>
                    <option value="0">Chờ duyệt</option>
                    <option value="1">Đã duyệt</option>
                    <option value="2">Từ chối</option>
                    <option value="3">Đang vận chuyển</option>
                    <option value="4">Đã giao</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo mẫu xe..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-success w-100"><i class="fas fa-search"></i> Lọc</button>
            </div>
        </form>
    </div>
</div>

<!-- Requests Table -->
<div class="card">
    <div class="card-body">
        @if (!Model.Requests.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Chưa có yêu cầu phân bổ nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Xe</th>
                            <th>Số lượng</th>
                            <th>Màu</th>
                            <th>Lý do</th>
                            <th>Ngày yêu cầu</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model.Requests)
                        {
                            <tr>
                                <td><strong>#@request.Id</strong></td>
                                <td>
                                    @request.VehicleModel @request.VehicleVersion
                                </td>
                                <td><span class="badge bg-secondary">@request.Quantity</span></td>
                                <td>@request.RequestedColor</td>
                                <td>
                                    @switch(request.Reason)
                                    {
                                        case 1: <span class="badge bg-primary">Đơn hàng</span>; break;
                                        case 2: <span class="badge bg-info">Dự trữ</span>; break;
                                        case 3: <span class="badge bg-warning">Test drive</span>; break;
                                        case 4: <span class="badge bg-success">Trưng bày</span>; break;
                                    }
                                </td>
                                <td>@request.RequestDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @switch(request.Status)
                                    {
                                        case 0: <span class="badge bg-warning"><i class="fas fa-clock"></i> Chờ duyệt</span>; break;
                                        case 1: <span class="badge bg-success"><i class="fas fa-check"></i> Đã duyệt</span>; break;
                                        case 2: <span class="badge bg-danger"><i class="fas fa-times"></i> Từ chối</span>; break;
                                        case 3: <span class="badge bg-info"><i class="fas fa-truck"></i> Đang chuyển</span>; break;
                                        case 4: <span class="badge bg-primary"><i class="fas fa-box-open"></i> Đã giao</span>; break;
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#detailModal-@request.Id">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Detail Modals -->
@foreach (var request in Model.Requests)
{
    <div class="modal fade" id="detailModal-@request.Id" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-ev-pale">
                    <h5 class="modal-title"><i class="fas fa-info-circle"></i> Chi Tiết Yêu Cầu #@request.Id</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Xe:</strong> @request.VehicleModel @request.VehicleVersion</p>
                            <p><strong>Số lượng:</strong> @request.Quantity</p>
                            <p><strong>Màu:</strong> @request.RequestedColor</p>
                            <p><strong>Thời hạn:</strong> @request.DesiredDeliveryDate.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Lý do:</strong> @request.ReasonText</p>
                            <p><strong>Ngày yêu cầu:</strong> @request.RequestDate.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Trạng thái:</strong> @request.StatusText</p>
                        </div>
                    </div>

                    @if (request.Status == 1 || request.Status == 2)
                    {
                        <hr />
                        <div class="alert alert-@(request.Status == 1 ? "success" : "danger")">
                            <h6><i class="fas fa-user-shield"></i> Phản hồi từ EVM</h6>
                            <p><strong>Ngày phê duyệt:</strong> @request.AllocationDate?.ToString("dd/MM/yyyy")</p>
                            <p><strong>Ghi chú:</strong> @request.ApprovalNotes</p>
                            @if (!string.IsNullOrEmpty(request.StaffSuggestion))
                            {
                                <p><strong>Đề xuất:</strong> @request.StaffSuggestion</p>
                            }
                        </div>
                    }

                    @if (request.Status >= 3)
                    {
                        <hr />
                        <div class="alert alert-info">
                            <h6><i class="fas fa-shipping-fast"></i> Thông Tin Vận Chuyển</h6>
                            @if (request.ShipmentDate.HasValue)
                            {
                                <p><strong>Ngày xuất kho:</strong> @request.ShipmentDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                            @if (request.DeliveryDate.HasValue)
                            {
                                <p><strong>Ngày giao hàng:</strong> @request.DeliveryDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
}
