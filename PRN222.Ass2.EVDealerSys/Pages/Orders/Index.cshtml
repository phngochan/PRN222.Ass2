                            <label>S·ªë l∆∞·ª£ng</label>
                            <input type="number" class="form-control" name="Quantity" value="@currentQuantity" min="1" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ƒê√≥ng</button>
                        <button type="submit" class="btn btn-primary">L∆∞u thay ƒë·ªïi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<script>
    $(document).ready(function () {
        // ƒê√°nh d·∫•u ƒë·ªÉ tr√°nh reload khi ƒëang ·ªü trang hi·ªán t·∫°i
        let isCurrentPageAction = false;

        // ƒê√°nh d·∫•u khi submit form t·ª´ trang n√†y
        $('#createOrderForm').on('submit', function() {
            isCurrentPageAction = true;
        });

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/orderHub")
            .configureLogging(signalR.LogLevel.Information)
            .build();

        connection.on("ReceiveNewOrder", function (order) {
            console.log("üì¶ ƒê∆°n h√†ng m·ªõi:", order);
            
            // CH·ªà reload n·∫øu KH√îNG ph·∫£i t·ª´ h√†nh ƒë·ªông c·ªßa user hi·ªán t·∫°i
            if (!isCurrentPageAction) {
                // Hi·ªÉn th·ªã notification thay v√¨ reload ngay
                if (confirm("C√≥ ƒë∆°n h√†ng m·ªõi! B·∫°n c√≥ mu·ªën t·∫£i l·∫°i trang kh√¥ng?")) {
                    location.reload();
                }
            } else {
                // Reset flag sau khi x·ª≠ l√Ω
                isCurrentPageAction = false;
            }
        });

        connection.on("ReceiveOrderStatusUpdate", function (update) {
            console.log("üîÅ C·∫≠p nh·∫≠t tr·∫°ng th√°i:", update);
            const row = $(`#order-row-${update.id}`);
            if (row.length > 0) {
                const statusCell = row.find(".order-status");
                let badgeHtml = '';

                if (update.status === "ƒêang x·ª≠ l√Ω") {
                    badgeHtml = '<span class="badge bg-success">ƒêang x·ª≠ l√Ω</span>';
                } else if (update.status === "ƒê√£ h·ªßy") {
                    badgeHtml = '<span class="badge bg-dark">ƒê√£ h·ªßy</span>';
                }

                statusCell.html(badgeHtml);

                row.find(".order-actions button").prop('disabled', true);
                
                // Th√™m hi·ªáu ·ª©ng
                row.addClass("update-highlight");
                setTimeout(() => row.removeClass("update-highlight"), 2000);
            }
        });

        connection.on("ReceiveOrderUpdate", function (data) {
            console.log("‚úèÔ∏è C·∫≠p nh·∫≠t ƒë∆°n h√†ng:", data);
            const row = $(`#order-row-${data.id}`);
            if (row.length > 0) {
                row.find(".order-total-price").text(data.totalPrice);
                row.find(".order-quantity").text(data.quantity);

                const detailCell = $(`#detail-${data.id}`).find(".order-detail-cell");
                if(detailCell.length > 0) {
                    const unitPriceString = data.unitPrice.replace(/\./g, '').replace(' ƒë', '');
                    const unitPriceNum = parseFloat(unitPriceString);
                    const quantityNum = parseInt(data.quantity);
                    const totalDetailPriceNum = unitPriceNum * quantityNum;

                    const totalDetailPriceFormatted = isNaN(totalDetailPriceNum)
                        ? 'L·ªói ƒë·ªãnh d·∫°ng'
                        : totalDetailPriceNum.toLocaleString('vi-VN') + ' ƒë';

                    const detailHtml = `
                        <strong>Chi ti·∫øt ƒë∆°n:</strong>
                        <ul>
                            <li>
                                Xe: ${data.vehicleModel} - SL: ${data.quantity} x ${data.unitPrice}
                                = <span class="fw-bold">${totalDetailPriceFormatted}</span>
                            </li>
                        </ul>
                    `;
                    detailCell.html(detailHtml);
                }

                row.addClass("update-highlight");
                setTimeout(() => row.removeClass("update-highlight"), 2000);
            }
        });

        connection.start()
            .then(() => console.log("‚úÖ K·∫øt n·ªëi SignalR th√†nh c√¥ng"))
            .catch(err => console.error("‚ùå L·ªói SignalR:", err));
    });
</script>
}
