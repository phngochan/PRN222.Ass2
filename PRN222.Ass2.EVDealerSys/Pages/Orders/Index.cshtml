                                @{
                                    // T√≠nh to√°n t·ªïng gi√° tr·ªã c·ªßa chi ti·∫øt ƒë∆°n h√†ng
                                    var detailTotalPrice = currentItem?.UnitPrice * currentQuantity;
                                }
                                <li>
