                            @if (isCancelled)
                            {
                                <span class="badge bg-dark">ƒê√£ h·ªßy</span>
                            }
                            else if (isPaid)
                            {
                                <span class="badge bg-success">ƒêang x·ª≠ l√Ω</span>
                            }
                            else
                            {
