@page
@model PRN222.Ass2.EVDealerSys.Pages.CustomerManagement.CreateModel
@{
    ViewData["Title"] = "Thêm Khách hàng mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Name" class="form-label">
                                <i class="fas fa-user"></i> Tên khách hàng <span class="text-danger">*</span>
                            </label>

                            <input asp-for="ViewModel.Name" class="form-control" placeholder="Nhập tên khách hàng" />

                            <span asp-validation-for="ViewModel.Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ViewModel.Email" class="form-control" placeholder="VD: abc@gmail.com" />
                                <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Phone" class="form-label">
                                    <i class="fas fa-phone"></i> Số điện thoại <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ViewModel.Phone" class="form-control" placeholder="VD: 0123456789" />
                                <span asp-validation-for="ViewModel.Phone" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Address" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Địa chỉ <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ViewModel.Address" class="form-control" placeholder="Nhập địa chỉ đầy đủ" />
                            <span asp-validation-for="ViewModel.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.DealerId" class="form-label">
                                <i class="fas fa-info-circle"></i> Trạng thái <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ViewModel.DealerId" class="form-control">
                                <option value="">-- Chọn đại lý --</option>
                                @if (Model.ViewModel.AvailableDealers != null)
                                {
                                    @foreach (var dealer in Model.ViewModel.AvailableDealers)
                                    {
                                        <option value="@dealer.Id">@dealer.Name - @dealer.Region</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ViewModel.DealerId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Lưu xe mới
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/managementHub.js"></script>
    <script>
        if (window.managementHub && window.managementHub.connection) {
            window.managementHub.connection.on("ReceiveDealerCreated", function (dealerData) {
                // Thêm dealer mới vào array
                if (!window.availableDealers) window.availableDealers = [];
                window.availableDealers.push({
                    id: dealerData.id,
                    name: dealerData.name,
                    region: dealerData.region
                });
                // Cập nhật dropdown
                updateDealerDropdown();
            });
        }

        function updateDealerDropdown() {
            var select = document.querySelector('select[name="ViewModel.DealerId"]');
            if (!select) return;
            // Xóa hết option cũ (trừ option đầu tiên)
            select.options.length = 1;
            // Thêm lại option mới
            window.availableDealers.forEach(function (dealer) {
                var opt = document.createElement('option');
                opt.value = dealer.id;
                opt.text = dealer.name + ' - ' + dealer.region;
                select.appendChild(opt);
            });
        }
    </script>

    @* Render JS array từ danh sách đại lý *@
    <script>
        window.availableDealers = [
            @foreach (var dealer in Model.ViewModel.AvailableDealers ?? [])
            {
                <text>
                { id: @dealer.Id, name: "@dealer.Name", region: "@dealer.Region" },
                </text>
            }
        ];
    </script>
}

