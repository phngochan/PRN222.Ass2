@page
@model PRN222.Ass2.EVDealerSys.Pages.CustomerManagement.DetailsModel
@{
    ViewData["Title"] = "Chi tiết Khách hàng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-user"></i> Thông tin Khách hàng
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-primary">@Model.ViewModel.Name</h5>
                            <p class="text-muted mb-1">
                                <i class="fas fa-envelope"></i> @Model.ViewModel.Email
                            </p>
                            <p class="text-muted mb-1">
                                <i class="fas fa-phone"></i> @Model.ViewModel.Phone
                            </p>
                            <p class="text-muted">
                                <i class="fas fa-map-marker-alt"></i> @Model.ViewModel.Address
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="mb-2">
                                <span class="badge badge-info badge-lg">@Model.ViewModel.DealerName</span>
                            </div>
                            <small class="text-muted">Khu vực: @Model.ViewModel.DealerRegion</small>
                        </div>
                    </div>

                    <hr>

                    <div class="row text-center">
                        <div class="col-md-6 mb-3">
                            <div class="border-left-primary p-3">
                                <h3 class="text-primary mb-0">@Model.ViewModel.TotalOrders</h3>
                                <small class="text-muted">Tổng đơn hàng</small>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="border-left-success p-3">
                                <h3 class="text-success mb-0">@Model.ViewModel.TotalSpent.ToString("N0") VNĐ</h3>
                                <small class="text-muted">Tổng chi tiêu</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.ViewModel.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>
                            <a asp-page="./Delete" asp-route-id="@Model.ViewModel.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-shopping-cart"></i> Đơn hàng gần đây
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.RecentOrders.Any())
                    {
                        @foreach (var order in Model.ViewModel.RecentOrders)
                        {
                            <div class="mb-3 pb-3 border-bottom">
                                <div class="d-flex justify-content-between">
                                    <strong>Đơn #@order.OrderId</strong>
                                    <span class="badge badge-@(order.Status == "Completed" ? "success" : "warning")">
                                        @order.Status
                                    </span>
                                </div>
                                <small class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy")</small>
                                <div class="mt-1">
                                    <span class="text-primary">@order.TotalAmount.ToString("N0") VNĐ</span>
                                    <small class="text-muted">(@order.ItemCount items)</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">Chưa có đơn hàng</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%);
    }

    .text-primary {
        color: #3e5f44 !important;
    }

    .text-success {
        color: #6b9b76 !important;
    }

    .border-left-primary {
        border-left: 0.25rem solid #3e5f44 !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #6b9b76 !important;
    }

    .badge-info {
        background-color: #93da97;
        color: #2c3e2f;
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

    .badge-success {
        background-color: #6b9b76;
    }

    .badge-warning {
        background-color: #5e936c;
        color: white;
    }

    .btn-warning {
        background-color: #5e936c;
        border-color: #5e936c;
        color: white;
    }

        .btn-warning:hover {
            background-color: #4d7a59;
            border-color: #4d7a59;
        }
</style>

