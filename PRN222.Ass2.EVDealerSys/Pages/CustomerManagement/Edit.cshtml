@page
@model PRN222.Ass2.EVDealerSys.Pages.CustomerManagement.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa Khách hàng";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                    <h5 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-edit"></i> Chỉnh sửa Khách hàng - ID: @Model.ViewModel.Id
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.OrderCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Khách hàng này có <strong>@Model.ViewModel.OrderCount đơn hàng</strong>. Thay đổi thông tin có thể ảnh hưởng đến các đơn hàng hiện tại.
                        </div>
                    }

                    <form asp-page="Edit" method="post">
                        <input type="hidden" asp-for="ViewModel.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Name" class="form-label">
                                <i class="fas fa-user"></i> Tên khách hàng <span class="text-danger">*</span>
                            </label>

                            <input asp-for="ViewModel.Name" class="form-control" placeholder="Nhập tên khách hàng" />

                            <span asp-validation-for="ViewModel.Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ViewModel.Email" class="form-control" placeholder="VD: abc@gmail.com" />
                                <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ViewModel.Phone" class="form-label">
                                    <i class="fas fa-phone"></i> Số điện thoại <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ViewModel.Phone" class="form-control" placeholder="VD: 0123456789" />
                                <span asp-validation-for="ViewModel.Phone" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.Address" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Địa chỉ <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ViewModel.Address" class="form-control" placeholder="Nhập địa chỉ đầy đủ" />
                            <span asp-validation-for="ViewModel.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ViewModel.DealerId" class="form-label">
                                <i class="fas fa-building"></i> Đại lý <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ViewModel.DealerId" class="form-control">
                                <option value="">-- Chọn đại lý --</option>
                                @if (Model.ViewModel.AvailableDealers != null)
                                {
                                    @foreach (var dealer in Model.ViewModel.AvailableDealers)
                                    {
                                        <option value="@dealer.Id">@dealer.Name - @dealer.Region</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ViewModel.DealerId" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(Model.ViewModel.CurrentDealerName))
                            {
                                <small class="form-text text-muted">Đại lý hiện tại: @Model.ViewModel.CurrentDealerName</small>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <a asp-page="./Details" asp-route-id="@Model.ViewModel.Id" class="btn btn-info me-2">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%);
    }

    .btn-primary {
        background-color: #3e5f44;
        border-color: #3e5f44;
    }

        .btn-primary:hover {
            background-color: #2c3e2f;
            border-color: #2c3e2f;
        }

    .btn-success {
        background-color: #6b9b76;
        border-color: #6b9b76;
    }

        .btn-success:hover {
            background-color: #5e936c;
            border-color: #5e936c;
        }

    .btn-info {
        background-color: #93da97;
        border-color: #93da97;
        color: #2c3e2f;
    }

        .btn-info:hover {
            background-color: #7ec883;
            border-color: #7ec883;
        }

    .input-group-text {
        background-color: #e8ffd7;
        border-color: #93da97;
        color: #3e5f44;
    }

    .form-control:focus {
        border-color: #5e936c;
        box-shadow: 0 0 0 0.2rem rgba(62, 95, 68, 0.25);
    }

    .alert-info {
        background-color: #fff8e1;
        border-color: #5e936c;
        color: #2c3e2f;
    }
</style>

