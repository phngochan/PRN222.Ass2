@page
@model PRN222.Ass2.EVDealerSys.Pages.CustomerManagement.DeleteModel
@{
    ViewData["Title"] = "Xóa Khách hàng";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-danger">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa Khách hàng
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-circle"></i> Cảnh báo!</h5>
                        <p>Bạn có chắc chắn muốn xóa khách hàng này không? Hành động này không thể hoàn tác.</p>
                    </div>

                    @if (Model.ViewModel.HasOrders)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle"></i> ViewModel.GetWarningMessage()
                        </div>
                    }

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title text-primary">ViewModel.Name</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong>Email:</strong> ViewModel.Email
                                    </p>
                                    <p class="mb-1">
                                        <strong>Số điện thoại:</strong> ViewModel.Phone
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong>Địa chỉ:</strong> ViewModel.Address
                                    </p>
                                    <p class="mb-1">
                                        <strong>Đại lý:</strong> ViewModel.DealerName
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <p class="mb-0">
                                <strong>Số đơn hàng:</strong>
                                <span class="badge badge-primary">ViewModel.OrderCount</span>
                            </p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ViewModel.Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-primary {
        color: #3e5f44 !important;
    }

    .badge-primary {
        background-color: #3e5f44;
    }
</style>
