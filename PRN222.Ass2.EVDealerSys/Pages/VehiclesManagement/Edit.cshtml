@page "{id:int}"
@model PRN222.Ass2.EVDealerSys.Pages.VehiclesManagement.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa xe";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header py-3 bg-primary">
                    <h5 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-edit"></i> Chỉnh sửa thông tin xe - ID: @Model.Input.Id
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Input.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.VehicleModel" class="form-label">
                                    <i class="fas fa-tag"></i> Model <span class="text-danger">*</span>
                                </label>

                                <input asp-for="Input.VehicleModel" class="form-control" list="availableModels" required />

                                <datalist id="availableModels">
                                    @foreach (var item in Model.ModelOptions as List<SelectListItem>)
                                    {
                                        <option value="@item.Text"></option>
                                    }
                                </datalist>

                                <span asp-validation-for="Input.VehicleModel" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Version" class="form-label">
                                    <i class="fas fa-code-branch"></i> Phiên bản <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Version" class="form-control" required />
                                <span asp-validation-for="Input.Version" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Color" class="form-label">
                                    <i class="fas fa-palette"></i> Màu sắc <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Input.Color" class="form-control"
                                        asp-items="@(Model.ColorOptions as List<SelectListItem>)" required>
                                </select>
                                <span asp-validation-for="Input.Color" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Price" class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Giá (VNĐ) <span class="text-danger">*</span>
                                </label>

                                <input type="text" id="priceDisplay" class="form-control"
                                       value="@(Model.Input.Price > 0 ? Model.Input.Price.ToString("N0") : "")" required />
                                <input type="hidden" asp-for="Input.Price" id="priceHidden" />

                                <span asp-validation-for="Input.Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Config" class="form-label">
                                <i class="fas fa-cogs"></i> Cấu hình
                            </label>
                            <textarea asp-for="Input.Config" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Input.Config" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Status" class="form-label">
                                <i class="fas fa-info-circle"></i> Trạng thái <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.Status" class="form-control"
                                    asp-items="@(Model.StatusOptions as List<SelectListItem>)">
                            </select>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                        </div>

                        @if (Model.Input.InventoryCount > 0 || Model.Input.OrderCount > 0 || Model.Input.AllocationCount > 0)
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Dữ liệu liên quan:</strong>
                                @Model.Input.InventoryCount tồn kho, @Model.Input.OrderCount đơn hàng, @Model.Input.AllocationCount phân bổ
                            </div>
                        }

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Lưu ý:</strong> Thay đổi trạng thái xe có thể ảnh hưởng đến đơn hàng và phân bổ hiện tại.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <a asp-page="./Details" asp-route-id="@Model.Input.Id" class="btn btn-info me-2">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Auto dismiss alerts after 8 seconds
            setTimeout(function () {
                $('.alert').fadeOut();
            }, 8000);

            // Clear messages when user starts typing
            $('input, select, textarea').on('input change', function () {
                $('.alert').fadeOut();
            });
        });

        function formatPrice(val) {
            val = val.replace(/,/g, "");
            if (val === "" || isNaN(val)) return "";
            return parseFloat(val).toLocaleString("en-US");
        }

        const display = document.getElementById("priceDisplay");
        const hidden = document.getElementById("priceHidden");

        if (display.value) {
            display.value = formatPrice(display.value);
            hidden.value = display.value.replace(/,/g, "");
        }

        display.addEventListener("input", function () {
            let raw = display.value.replace(/,/g, "");
            if (!isNaN(raw) && raw !== "") {
                display.value = formatPrice(raw);
                hidden.value = raw;
            } else {
                hidden.value = "";
            }
        });

        document.querySelector("form").addEventListener("submit", function () {
            hidden.value = display.value.replace(/,/g, "");
        });
    </script>
}

<style>
    .page-header {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .page-header h2 {
            margin-bottom: 0.5rem;
        }

    .card-header.bg-primary {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%) !important;
    }

    .form-label {
        font-weight: 600;
        color: #3e5f44;
    }

    .form-control:focus {
        border-color: #5e936c;
        box-shadow: 0 0 0 0.2rem rgba(94, 147, 108, 0.25);
    }

    .btn-success {
        background-color: #6b9b76;
        border-color: #6b9b76;
    }

        .btn-success:hover {
            background-color: #5e936c;
            border-color: #5e936c;
        }

    .btn-info {
        background-color: #93da97;
        border-color: #93da97;
        color: #2c3e2f;
    }

        .btn-info:hover {
            background-color: #7ec883;
            border-color: #7ec883;
        }

    .alert-info {
        background-color: #e8ffd7;
        border-color: #93da97;
        color: #3e5f44;
    }
</style>
