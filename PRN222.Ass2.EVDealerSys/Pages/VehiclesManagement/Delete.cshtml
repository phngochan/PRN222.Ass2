@page "{id:int}"
@model PRN222.Ass2.EVDealerSys.Pages.VehiclesManagement.DeleteModel
@{
    ViewData["Title"] = "Xóa xe";
}

<div class="container-fluid">
    @if (TempData["Error_Vehicles_Delete"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Lỗi:</strong> @TempData["Error_Vehicles_Delete"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header bg-danger">
                <h2><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa xe</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">Quản lý xe</a></li>
                        <li class="breadcrumb-item active">Xóa</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash"></i> Cảnh báo xóa dữ liệu</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-circle"></i> Cảnh báo!</h5>
                        <p class="mb-0">Bạn có chắc chắn muốn xóa xe này? Hành động này không thể hoàn tác.</p>
                    </div>

                    <h4 class="mb-4">Thông tin xe sẽ bị xóa:</h4>

                    <div class="vehicle-info-box">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label><i class="fas fa-hashtag"></i> ID:</label>
                                    <span>@Model.Input.Id</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label><i class="fas fa-tag"></i> Model:</label>
                                    <span>@Model.Input.VehicleModel</span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label><i class="fas fa-code-branch"></i> Phiên bản:</label>
                                    <span>@Model.Input.Version</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label><i class="fas fa-palette"></i> Màu sắc:</label>
                                    <span>@Model.Input.Color</span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label><i class="fas fa-dollar-sign"></i> Giá:</label>
                                    <span class="text-success fw-bold">@Model.Input.Price.ToString("N0") VNĐ</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label><i class="fas fa-info-circle"></i> Trạng thái:</label>
                                    @{
                                        var statusClass = Model.Input.Status switch
                                        {
                                            1 => "success",
                                            2 => "danger",
                                            3 => "warning",
                                            4 => "info",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@Model.Input.StatusText</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Input.HasRelatedData)
                    {
                        <div class="alert alert-warning mt-4">
                            <h6><i class="fas fa-link"></i> Dữ liệu liên quan sẽ bị ảnh hưởng:</h6>
                            <p class="mb-0">@Model.Input.GetWarningMessage()</p>
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Input.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .page-header h2 {
            margin-bottom: 0.5rem;
        }

    .breadcrumb {
        background-color: rgba(255, 255, 255, 0.1);
        margin-bottom: 0;
    }

    .breadcrumb-item a {
        color: #ffe0e0;
    }

    .breadcrumb-item.active {
        color: white;
    }

    .vehicle-info-box {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
    }

    .info-item {
        margin-bottom: 0.5rem;
    }

        .info-item label {
            font-weight: 600;
            color: #495057;
            margin-right: 0.5rem;
        }

        .info-item span {
            color: #212529;
        }

    .alert-danger {
        border-left: 4px solid #dc3545;
    }

    .alert-warning {
        border-left: 4px solid #ffc107;
    }

    .btn-lg {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
    }
</style>
