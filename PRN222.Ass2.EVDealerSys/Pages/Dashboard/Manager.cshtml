@page
@model PRN222.Ass2.EVDealerSys.Pages.Dashboard.ManagerModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-banner bg-success text-white rounded p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-user-tie"></i> Chào mừng, @Model.ViewModel.UserName!</h2>
                        <p class="mb-0">Manager Dashboard - Quản lý vận hành</p>
                        <small>Đăng nhập lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div class="text-end">
                        <i class="fas fa-chart-line fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Nhân viên
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.StaffCount</div>
                            <div class="small text-muted">
                                <i class="fas fa-users"></i> Thành viên trong team
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Đơn hàng tháng này
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.OrdersThisMonth</div>
                            <div class="small text-success">
                                <i class="fas fa-arrow-up"></i> Tăng so với tháng trước
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Khách hàng mới
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.CustomersThisMonth</div>
                            <div class="small text-info">
                                <i class="fas fa-user-plus"></i> Tháng này
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Hiệu suất
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">85%</div>
                            <div class="small text-success">
                                <i class="fas fa-trophy"></i> Mục tiêu tháng
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-bar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row">
        <!-- Team Members -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users"></i> Thành viên trong team
                    </h6>
                    <a asp-page="/User/Index" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye"></i> Quản lý tất cả
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.TeamMembers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Tên</th>
                                        <th>Email</th>
                                        <th>Điện thoại</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.ViewModel.TeamMembers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-2">
                                                        <i class="fas fa-user-circle fa-2x text-muted"></i>
                                                    </div>
                                                    <strong>@member.Name</strong>
                                                </div>
                                            </td>
                                            <td>@member.Email</td>
                                            <td>@(member.Phone ?? "N/A")</td>
                                            <td>
                                                <span class="badge bg-success">@member.Status</span>
                                            </td>
                                            <td>
                                                <a asp-page="/User/Details" asp-route-id="@member.Id"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-page="/User/Edit" asp-route-id="@member.Id"
                                                   class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có thành viên nào trong team</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions & Summary -->
        <div class="col-xl-4 col-lg-5">
            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-rocket"></i> Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-success btn-block">
                            <i class="fas fa-plus"></i> Tạo đơn hàng mới
                        </a>
                        <a href="#" class="btn btn-info btn-block">
                            <i class="fas fa-user-plus"></i> Thêm khách hàng
                        </a>
                        <a asp-page="/User/Index" class="btn btn-warning btn-block">
                            <i class="fas fa-users"></i> Quản lý nhân viên
                        </a>
                        <a href="#" class="btn btn-primary btn-block">
                            <i class="fas fa-chart-bar"></i> Báo cáo tháng
                        </a>
                    </div>
                </div>
            </div>

            <!-- Performance Summary -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie"></i> Tóm tắt hiệu suất
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="small">Mục tiêu doanh số</span>
                            <span class="small">85%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success" style="width: 85%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="small">Khách hàng hài lòng</span>
                            <span class="small">92%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-info" style="width: 92%"></div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span class="small">Hiệu suất team</span>
                            <span class="small">78%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-warning" style="width: 78%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notifications -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bell"></i> Thông báo
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Đơn hàng mới</div>
                                <small class="text-muted">2 đơn hàng cần xử lý</small>
                            </div>
                            <span class="badge bg-danger rounded-pill">2</span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Báo cáo tuần</div>
                                <small class="text-muted">Đến hạn nộp báo cáo</small>
                            </div>
                            <span class="badge bg-warning rounded-pill">!</span>
                        </div>

                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Đánh giá nhân viên</div>
                                <small class="text-muted">Tháng này</small>
                            </div>
                            <span class="badge bg-info rounded-pill">3</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .welcome-banner {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    }

    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }

    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
    }

    .text-gray-300 {
        color: #dddfeb !important;
    }

    .text-gray-800 {
        color: #5a5c69 !important;
    }

    .avatar-sm {
        width: 32px;
        height: 32px;
    }
</style>
