@page
@model PRN222.Ass2.EVDealerSys.Pages.Dashboard.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-banner bg-primary text-white rounded p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-tachometer-alt"></i> Chào mừng, @Model.ViewModel.UserName!</h2>
                        <p class="mb-0">Admin Dashboard - Quản trị hệ thống EV Dealer</p>
                        <small>Đăng nhập lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div class="text-end">
                        <i class="fas fa-crown fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng Users
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.TotalUsers</div>
                            <div class="small text-success">
                                <i class="fas fa-arrow-up"></i> @Model.ViewModel.SystemStats.UsersGrowth so với tháng trước
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tổng Dealers
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.TotalDealers</div>
                            <div class="small text-success">
                                <i class="fas fa-building"></i> Đại lý hoạt động
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tổng Đơn hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.TotalOrders</div>
                            <div class="small text-success">
                                <i class="fas fa-arrow-up"></i> @Model.ViewModel.SystemStats.OrdersGrowth so với tháng trước
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tổng Xe
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModel.TotalVehicles</div>
                            <div class="small text-info">
                                <i class="fas fa-car"></i> Phương tiện trong kho
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-car fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user-plus"></i> Users mới nhất
                    </h6>
                    <a asp-page="/UsersManagement/Index" class="btn btn-sm btn-primary">
                        <i class="fas fa-eye"></i> Xem tất cả
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.ViewModel.RecentUsers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Ngày tạo</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.ViewModel.RecentUsers)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Name</td>
                                            <td>@user.Email</td>
                                            <td>
                                                <span class="badge badge-@(GetRoleBadgeClass(user.Role))">
                                                    @user.RoleName
                                                </span>
                                            </td>
                                            <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a asp-page="/UsersManagement/Details" asp-route-id="@user.Id"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có user mới</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-rocket"></i> Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="/UsersManagement/Create" class="btn btn-success btn-block">
                            <i class="fas fa-user-plus"></i> Thêm User mới
                        </a>
                        <a asp-page="/UsersManagement/Index" class="btn btn-info btn-block">
                            <i class="fas fa-users"></i> Quản lý Users
                        </a>
                        <a asp-page="/DealersManagement/Create" class="btn btn-warning btn-block">
                            <i class="fas fa-building"></i> Quản lý Dealers
                        </a>
                        <a asp-page="/VehiclesManagement/Create" class="btn btn-primary btn-block">
                            <i class="fas fa-car"></i> Quản lý Xe
                        </a>
                        <a href="#" class="btn btn-secondary btn-block">
                            <i class="fas fa-chart-bar"></i> Báo cáo
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> Thông tin hệ thống
                    </h6>
                </div>
                <div class="card-body">
                    <div class="small">
                        <p><strong>Phiên bản:</strong> 1.0.0</p>
                        <p><strong>Cơ sở dữ liệu:</strong> SQL Server</p>
                        <p><strong>Máy chủ:</strong> Windows Server</p>
                        <p><strong>Thời gian hoạt động:</strong> 24/7</p>
                        <p class="mb-0"><strong>Cập nhật cuối:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetRoleBadgeClass(int role)
    {
        return role switch
        {
            1 => "danger",
            2 => "warning",
            3 => "success",
            _ => "secondary"
        };
    }
}

<style>
    /* Updated to match green palette: #3E5F44, #5E936C, #93DA97, #E8FFD7 */
    .welcome-banner {
        background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%);
    }

    .border-left-primary {
        border-left: 0.25rem solid #3e5f44 !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #6b9b76 !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #93da97 !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #5e936c !important;
    }

    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(62, 95, 68, 0.15) !important;
    }

    .text-gray-300 {
        color: #c5d9c9 !important;
    }

    .text-gray-800 {
        color: #2c3e2f !important;
    }

    .text-primary {
        color: #3e5f44 !important;
    }

    .text-success {
        color: #6b9b76 !important;
    }

    .text-info {
        color: #5e936c !important;
    }

    .text-warning {
        color: #93da97 !important;
    }

    .btn-primary {
        background-color: #3e5f44;
        border-color: #3e5f44;
    }

        .btn-primary:hover {
            background-color: #2c3e2f;
            border-color: #2c3e2f;
        }

    .btn-success {
        background-color: #6b9b76;
        border-color: #6b9b76;
    }

        .btn-success:hover {
            background-color: #5e936c;
            border-color: #5e936c;
        }

    .btn-info {
        background-color: #93da97;
        border-color: #93da97;
        color: #2c3e2f;
    }

        .btn-info:hover {
            background-color: #7ec883;
            border-color: #7ec883;
        }

    .btn-warning {
        background-color: #5e936c;
        border-color: #5e936c;
        color: white;
    }

        .btn-warning:hover {
            background-color: #4d7a59;
            border-color: #4d7a59;
        }

    .badge-success {
        background-color: #6b9b76;
    }

    .badge-info {
        background-color: #93da97;
        color: #2c3e2f;
    }

    .badge-warning {
        background-color: #5e936c;
    }

    .thead-light {
        background-color: #e8ffd7;
        color: #2c3e2f;
    }
</style>
