@page
@model PRN222.Ass2.EVDealerSys.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #e8ffd7 0%, #93da97 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow-lg border-0" style="border-radius: 15px; overflow: hidden;">
                    <!-- Header with green gradient -->
                    <div style="background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%); padding: 40px 20px; text-align: center;">
                        <div style="font-size: 80px; color: #e8ffd7; margin-bottom: 15px;">
                            <i class="fas fa-lock"></i>
                        </div>
                        <h1 style="color: white; font-size: 48px; font-weight: bold; margin: 0;">403</h1>
                        <p style="color: #e8ffd7; font-size: 18px; margin-top: 10px;">Access Denied</p>
                    </div>

                    <!-- Content -->
                    <div class="card-body p-5">
                        <h2 style="color: #3e5f44; margin-bottom: 20px; text-align: center;">
                            <i class="fas fa-exclamation-triangle"></i> Bạn không có quyền truy cập
                        </h2>
                        
                        <p style="color: #5e936c; font-size: 16px; text-align: center; margin-bottom: 30px;">
                            Xin lỗi, bạn không có quyền truy cập vào trang này. Nếu bạn cho rằng đây là một lỗi, vui lòng liên hệ với quản trị viên hệ thống.
                        </p>

                        <!-- Additional Info -->
                        <div style="background-color: #e8ffd7; border-left: 4px solid #3e5f44; padding: 15px; border-radius: 5px; margin-bottom: 30px;">
                            <p style="color: #3e5f44; margin: 0; font-size: 14px;">
                                <i class="fas fa-info-circle"></i> 
                                <strong>Lý do:</strong> Tài khoản của bạn không có quyền cần thiết để truy cập tài nguyên này.
                            </p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-3">
                            <a href="javascript:history.back()" class="btn btn-lg" style="background-color: #5e936c; color: white; border: none; font-weight: 600; padding: 12px 20px;">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <a href="/" class="btn btn-lg" style="background-color: #93da97; color: #2c3e2f; border: none; font-weight: 600; padding: 12px 20px;">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div style="background-color: #f5f5f5; padding: 20px; text-align: center; border-top: 1px solid #e0e0e0;">
                        <p style="color: #666; font-size: 12px; margin: 0;">
                            EV Dealer System | Mã lỗi: 403 | 
                            <span style="color: #3e5f44;">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-100 {
        min-height: 100vh;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(62, 95, 68, 0.2);
        transition: all 0.3s ease;
    }

    .btn:active {
        transform: translateY(0);
    }
</style>

