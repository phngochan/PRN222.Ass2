@page
@model PRN222.Ass2.EVDealerSys.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <div class="container-fluid h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <div class="mb-3">
                            <i class="fas fa-charging-station fa-3x"></i>
                        </div>
                        <h3 class="mb-0">EV Dealer System</h3>
                        <p class="mb-0 small">Đăng nhập hệ thống</p>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-group mb-3">
                                <label asp-for="LoginData.Email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i> Email
                                </label>
                                <input asp-for="LoginData.Email" class="form-control form-control-lg" placeholder="admin@EVDealerSystem.org" />
                                <span asp-validation-for="LoginData.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="LoginData.Password" class="form-label">
                                    <i class="fas fa-lock me-1"></i> Mật khẩu
                                </label>
                                <input asp-for="LoginData.Password" class="form-control form-control-lg" placeholder="••••••••••" />
                                <span asp-validation-for="LoginData.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="LoginData.RememberMe" class="form-check-input" />
                                <label asp-for="LoginData.RememberMe" class="form-check-label">
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3 bg-light">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt"></i> Hệ thống quản lý đại lý xe điện
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Thêm class cho body để áp dụng CSS riêng cho trang login
        document.body.classList.add('login-page');
    </script>
}

<style>
    .login-container {
        background: linear-gradient(135deg, #e8ffd7 0%, #93da97 100%);
        min-height: 100vh;
        width: 100vw;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

        .login-container .card {
            border-radius: 1rem;
            overflow: hidden;
            max-width: 400px;
            margin: 0 auto;
        }

        .login-container .card-header.bg-primary {
            background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%) !important;
            border: none;
        }

        .login-container .form-control {
            border: 2px solid #e8ffd7;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .login-container .form-control:focus {
                border-color: #5e936c;
                box-shadow: 0 0 0 0.2rem rgba(94, 147, 108, 0.25);
            }

        .login-container .btn-primary {
            background: linear-gradient(135deg, #3e5f44 0%, #5e936c 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .login-container .btn-primary:hover {
                background: linear-gradient(135deg, #2c3e2f 0%, #4d7a59 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(62, 95, 68, 0.3);
            }

        .login-container .form-check-input:checked {
            background-color: #5e936c;
            border-color: #5e936c;
        }

        .login-container .card-footer {
            background-color: #f8fdf5 !important;
            border-top: 1px solid #e8ffd7;
        }

        .login-container .shadow-lg {
            box-shadow: 0 1rem 3rem rgba(62, 95, 68, 0.175) !important;
        }

        .login-container .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c2c7;
            color: #842029;
            border-radius: 0.5rem;
        }

        .login-container .form-label {
            font-weight: 600;
            color: #3e5f44;
            margin-bottom: 0.5rem;
        }

    .h-100 {
        height: 100vh !important;
    }
</style>
